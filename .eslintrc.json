{
    "extends": ["airbnb", "prettier"],
    "plugins": ["prettier"],
    "env": {
      "node": true
    },
    "rules": {
      "prettier/prettier": ["error"],
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "never"
        }
      ],
      "max-len": ["error", 140, 2],
      "guard-for-in": "off",
      "no-restricted-syntax": "off",
      "class-methods-use-this": "off"
    }
}
